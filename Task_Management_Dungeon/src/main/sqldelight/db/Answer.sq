CREATE TABLE Answer (
    id INTEGER NOT NULL PRIMARY KEY,
    questionID INTEGER NOT NULL,
    answer TEXT NOT NULL
);

getAnswerById:
SELECT *
FROM Answer
WHERE id = :id;

getAnswersByQuestionId:
SELECT *
FROM Answer
WHERE questionID = :id;

insertAnswer:
INSERT OR REPLACE
INTO Answer
VALUES (?,?,?);

deleteAnswerById:
DELETE FROM Answer
WHERE id = :id;